//#include <Python/Python.h>
#include <Python.h>
void sayWord(int word){
    printf("This is a C function was passed...%d\n",word);
}

static PyObject* saySomething(PyObject* self, PyObject* args){
    // onoff is the toggle value for what ever switch is getting switched
    // int onoff = 0;

    //char word[128];
    int word = 0 ;
    if (!PyArg_ParseTuple(args, "d", word))
        return NULL;

        sayWord(word);

        return Py_None;//Py_BuildValue("s","hello");
}

static PyMethodDef SayMethods[] =
{
     {"saySomething", saySomething, METH_VARARGS, "Greet somebody."},
     {NULL, NULL, 0, NULL}
};

PyMODINIT_FUNC PyInit_libsay() {
    (void) Py_InitModule("libsay", SayMethods);
}
